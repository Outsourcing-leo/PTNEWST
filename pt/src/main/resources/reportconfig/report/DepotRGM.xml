	<page id="DepotRGMlistpage">
		<report id="DepotRGM" title="DepotRGM List" rowselect="multiple-checkbox|true" pagesize="10" scrollstyle="image" height="300px" width="100%" type="editablelist">
			<display>
				<col column="id" label="id" displaytype="hidden"/>
				<col column="{sequence:1}" label="Sequence"/>
				<!-- <col column="DEPOTID" label="DEPOTID" displaytype="hidden"/> -->
				<col column="DEPOTID" label="Depot" />
				<col column="USERNAME" label="Username"/>
				<col column="MAILLIST" label="MailList" />
				<col column="type" label="type" displaytype="hidden" />
			</display>
			<sql>
				<select>
				<value>
					<![CDATA[SELECT ID,DEPOTID,USERNAME,MAILLIST,type FROM PT_BSM_RGM where {#condition#} and type='RGM' order by id]]>
				</value>
				<condition name="txtdepotid" label="Depot" labelposition="left">
					<value>
						<![CDATA[(depotid like  '%#data#%' )]]>
					</value>
				</condition>
				<condition name="txtuserName" label="UserName" labelposition="left">
					<value>
						<![CDATA[(userName like  '%#data#%' )]]>
					</value>
				</condition>
				</select>
				 <insert pageurl="report{DepotRGMformpage.report1}" popupparams="{title:'create DepotRGM',width:650,height:400}"></insert>
				 <update pageurl="report{DepotRGMformpage.report1}" urlparams="txtid=@{id}" popupparams="{title:'update DepotRGM',width:650,height:400}"></update>
				 <delete>
				  	delete from PT_BSM_RGM where id=@{id__old};
				</delete>
